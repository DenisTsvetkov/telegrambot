<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Новое сообщение</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <form action="/new_message" method="POST">
                <div class="form-group">
                    <input type="hidden" name="id_user" value="{{loginedUser.id}}">
                    <label for="post_text" class="col-form-label">Текст сообщения:</label>
                    <textarea class="form-control" name="post_text" id="post_text" placeholder="Введите текст сообщение..." required></textarea>
                </div>
                <div class="poll">
                  <button class="btn btn-light btn-sm poll-btn-add">Добавить голосование</button>
                  
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success"><i class="far fa-edit"></i> Написать</button>
                </div>
            </form>
        </div>
    </div>
  </div>
</div>